<h2>Puntajes Totales</h2>
<table>
  <tr>
    <th>Jugador</th>
    <th>Puntaje</th>
  </tr>

  <% @total_scores.each do |t| %>
    <tr>
      <td><%= t.player.name %></td>
      <td><%= t.score %></td>
    </tr>
  <% end %>
</table>

<h1>Las pistas y sus reyes</h1>
<table>
  <tr>
    <th>Pista</th>
    <th>Rey</th>
    <th>Puntaje</th>
  </tr>
  <% @circuits.each do |c| %>
    <% if c.winner %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.winner.player.name %></td>
        <td><%= c.winner.score %></td>
      </tr>
    <% end %>
  <% end %>
</table>